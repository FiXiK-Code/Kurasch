                    <SolidColorBrush Color="Black" Opacity="0.23"/>
                </Grid.Background>
            </Grid>
            <TextBox HorizontalAlignment="Left" Height="31" Margin="28,10,0,0" TextWrapping="Wrap" Text="Название: Какое-то длинное название фильма" VerticalAlignment="Top" Width="519" FontSize="20"/>
            <TextBox HorizontalAlignment="Left" Height="31" Margin="581,10,0,0" TextWrapping="Wrap" Text="Цена билета: 500р" VerticalAlignment="Top" Width="203" FontSize="20"/>
            <Button Background="#FF00E500" HorizontalAlignment="Left" Margin="28,49,0,0" VerticalAlignment="Top" Width="20" Height="20" RenderTransformOrigin="0.729,0.763"/>
            <Label Content="- Свободные места:" HorizontalAlignment="Left" Margin="60,46,0,0" VerticalAlignment="Top"/>
            <Button Background="Red" HorizontalAlignment="Left" Margin="243,49,0,0" VerticalAlignment="Top" Width="20" Height="20" RenderTransformOrigin="0.729,0.763"/>
