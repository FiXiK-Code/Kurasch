            <Label x:Name="GreenPlant" Content="50" HorizontalAlignment="Left" Margin="178,46,0,0" VerticalAlignment="Top" Width="25"/>
            <TextBox HorizontalAlignment="Left" Height="24" Margin="23,112,0,0" TextWrapping="Wrap" Text="Ряд 1" VerticalAlignment="Top" Width="54"/>
            <TextBox HorizontalAlignment="Left" Height="24" Margin="23,142,0,0" TextWrapping="Wrap" Text="Ряд 1" VerticalAlignment="Top" Width="54"/>
            <TextBox HorizontalAlignment="Left" Height="24" Margin="23,172,0,0" TextWrapping="Wrap" Text="Ряд 1" VerticalAlignment="Top" Width="54"/>
            <Label Content="Зал № 5" HorizontalAlignment="Left" Margin="372,46,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="Home" HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="794" Margin="-10,-2,0,0" d:IsHidden="True">
            <ListBox HorizontalAlignment="Left" Height="280" Margin="35,113,0,0" VerticalAlignment="Top" Width="429"/>
            <TextBox HorizontalAlignment="Left" Height="40" Margin="35,54,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="429"/>
            <ComboBox HorizontalAlignment="Left" Margin="497,115,0,0" VerticalAlignment="Top" Width="287" Height="43"/>
            <TextBlock HorizontalAlignment="Left" Margin="497,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="117" Width="287" FontSize="20"><Run Text="500p"/><LineBreak/><Run/><LineBreak/><Run Text="open plent : 40"/><LineBreak/><Run/></TextBlock>
            <Button Content="Button" HorizontalAlignment="Left" Margin="557,338,0,0" VerticalAlignment="Top" Width="227" Height="55"/>
            <TextBlock HorizontalAlignment="Left" Margin="497,43,0,0" TextWrapping="Wrap" Text="12:50" VerticalAlignment="Top" Height="51" Width="97" FontSize="36"/>
        </Grid>

    </Grid>
</Window>
